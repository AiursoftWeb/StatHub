@model Aiursoft.StatHub.Views.Shared.Components.MarketingFooter.MarketingFooterViewModel
@using Microsoft.AspNetCore.Localization
<footer class="py-5 bg-dark">
    <div class="container">
        <div class="row mb-4">
            <div class="col-12 col-lg-4">
                <div class="mb-3">
                    <img src="~/logo.svg" alt="logo" style="width: 24px; height: 24px;" loading="lazy" />
                </div>
                <p class="text-white-50">
                    @Localizer["Aiursoft Stathub - A simple server stat statistics system. It can collect server stats and display them in a simple way."]
                </p>
                <div class="dropdown mt-3 mb-3">
                    @{
                        var currentCulture = ViewContext.HttpContext.Features
                            .Get<IRequestCultureFeature>()?
                            .RequestCulture.Culture.Name;
                    }
                    <form asp-controller="Culture" asp-action="Set" method="post" class="d-inline" asp-route-returnUrl="@(Context.Request.Path + Context.Request.QueryString)">
                        <select name="culture" onchange="this.form.submit()" class="form-select form-select-sm w-auto">
                            @foreach (var culture in Aiursoft.WebTools.OfficialPlugins.LocalizationPlugin.SupportedCultures)
                            {
                                <option value="@culture.Key"
                                        selected="@(culture.Key == currentCulture ? "selected" : null)">
                                    @culture.Value
                                </option>
                            }
                        </select>
                    </form>
                </div>
            </div>
            <div class="col-12 col-md-4 col-lg-2 mb-3 mb-md-0">
                <h4 class="text-light fs-5">@Localizer["Resources"]</h4>
                <ul class="list-unstyled ps-0 mb-0 mt-3">
                    <li class="mt-2">
                        <a href="https://github.com/aiursoftweb/stathub/discussions" class="text-white-50">@Localizer["Community"]</a>
                    </li>
                </ul>
            </div>
            <div class="col-12 col-md-4 col-lg-2 mb-3 mb-md-0">
                <h4 class="text-light fs-5">@Localizer["Project"]</h4>
                <ul class="list-unstyled ps-0 mb-0 mt-3">
                    <li class="mt-2">
                        <a href="https://github.com/aiursoftweb/stathub" class="text-white-50">@Localizer["Source Code"]</a>
                    </li>
                    <li class="mt-2">
                        <a href="https://github.com/aiursoftweb/stathub/issues" class="text-white-50">@Localizer["Report an Issue"]</a>
                    </li>
                    <li class="mt-2">
                        <a href="https://github.com/aiursoftweb/stathub/pulls" class="text-white-50">@Localizer["Contributions"]</a>
                    </li>
                </ul>
            </div>
            <div class="col-12 col-md-4 col-lg-2 mb-3 mb-md-0">
                <h4 class="text-light fs-5">@Localizer["Legal"]</h4>
                <ul class="list-unstyled ps-0 mb-0 mt-3">
                    <li class="mt-2">
                        <a href="https://github.com/aiursoftweb/stathub/blob/master/LICENSE" class="text-white-50">@Localizer["Licence"]</a>
                    </li>
                </ul>
            </div>
            <div class="col-12 col-md-4 col-lg-2 mb-3 mb-md-0">
                <h4 class="text-light fs-5">@Localizer["Social"]</h4>
                <ul class="list-unstyled ps-0 mb-0 mt-3">
                    <li class="mt-2">
                        <i class="fa-brands fa-github"></i>
                        <a href="https://github.com/aiursoftweb" class="text-white-50" target="_blank">@Localizer["Github"]</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <p class="text-white-50 mt-4 text-center mb-0">
                    Â© @DateTime.Now.Year <a href="https://www.aiursoft.com/" target="_blank">@Localizer["Aiursoft"]</a>
                </p>
            </div>
        </div>
    </div>
</footer>
