@model Aiursoft.StatHub.Models.AccountViewModels.RegisterViewModel

<div class="row justify-content-center">
    <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5">
        <div class="card">
            <div class="card-body">

                <div class="m-sm-3 text-center">
                    <h1 class="h2">@Localizer["Get Started"]</h1>
                    <p class="lead">
                        @Localizer["Join us now to start your journey."]
                    </p>
                </div>

                <form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">

                    @* The validation summary is preserved, providing a clear overview of any errors. *@
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">@Localizer["Email Address"]</label>
                        <input asp-for="Email" class="form-control form-control-lg" placeholder="@Localizer["Enter your email address"]" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">@Localizer["Password"]</label>
                        <input asp-for="Password" class="form-control form-control-lg" placeholder="@Localizer["Create a password"]" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">@Localizer["Confirm Password"]</label>
                        <input asp-for="ConfirmPassword" class="form-control form-control-lg" placeholder="@Localizer["Confirm your password"]" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-lg btn-primary">@Localizer["Create Account"]</button>
                    </div>
                </form>

                <div class="text-center mt-3">
                    @Localizer["Already have an account?"] <a asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">@Localizer["Sign in"]</a>
                </div>

            </div>
        </div>
    </div>
</div>
