@model Aiursoft.StatHub.Models.DashboardViewModels.AgentDetailsViewModel
@using Aiursoft.CSTools.Tools
@using Aiursoft.WebTools

@{
    var agent = Model.Agent;
    var health = agent.GetHealthReport();
    var mem = agent.GetMemUsed();
}

<div class="container-fluid p-0">

    <div class="row mb-2 mb-xl-3">
        <div class="col-auto d-none d-sm-block">
            <h3>@Localizer["Client Details"]</h3>
        </div>

        <div class="col-auto ms-auto text-end mt-n1">
            <form asp-controller="Dashboard" asp-action="Abandon" asp-route-id="@agent.ClientId" method="post" class="d-inline">
                <button type="submit" class="btn btn-danger shadow-sm me-1" onclick="return confirm('@Localizer["Abandoning is not deletion. If this agent persists in submitting, it will appear again soon. Please use systemd command to stop the agent."]')">
                    <i class="align-middle" data-lucide="trash-2"></i> @Localizer["Abandon"]
                </button>
            </form>
            <a asp-action="Index" class="btn btn-light bg-white shadow-sm">
                <i class="align-middle" data-lucide="arrow-left"></i> @Localizer["Back to Dashboard"]
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-sm-6 col-xxl-3 d-flex">
            <div class="card flex-fill">
                <div class="card-body py-4">
                    <div class="d-flex align-items-start">
                        <div class="flex-grow-1">
                            <h3 class="mb-2">@agent.Hostname</h3>
                            <p class="mb-2">
                                @if (agent.IsPrivateIp())
                                {
                                    <span style="margin-right: 5px;">üè†</span>
                                }
                                else if (!string.IsNullOrWhiteSpace(agent.CountryCode))
                                {
                                    <img src="~/node_modules/@("@aiursoft")/uistack/dist/img/flags/@(agent.CountryCode.ToLower()).png" alt="@agent.CountryName" style="height: 15px; margin-right: 5px;" />
                                }
                                @agent.Ip
                            </p>
                            <div class="mb-0">
                                <span class="badge @health.BadgeClass" data-bs-toggle="tooltip" title="@health.Reason">
                                    @Localizer[health.BadgeText]
                                </span>
                            </div>
                        </div>
                        <div class="d-inline-block ms-3">
                            <div class="stat">
                                <i class="align-middle @health.IconClass"
                                   data-lucide="@health.DetailsIconDataLucide"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-xxl-3 d-flex">
            <div class="card flex-fill">
                <div class="card-body py-4">
                    <div class="d-flex align-items-start">
                        <div class="flex-grow-1">
                            <h3 class="mb-2">@agent.GetSku()</h3>
                            <p class="mb-2">@Localizer["Hardware SKU"]</p>
                            <div class="mb-0">
                                <span class="text-muted">@Localizer["Cores-RAM-Disk"]</span>
                            </div>
                        </div>
                        <div class="d-inline-block ms-3">
                            <div class="stat">
                                <i class="align-middle text-info" data-lucide="cpu"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-xxl-3 d-flex">
            <div class="card flex-fill">
                <div class="card-body py-4">
                    <div class="d-flex align-items-start">
                        <div class="flex-grow-1">
                            <h3 class="mb-2" style="font-size: 1.5rem;">@agent.OsName</h3>
                            <p class="mb-2">@Localizer["Operating System"]</p>
                            <div class="mb-0">
                                <span class="text-muted">Ver: @agent.Version</span>
                            </div>
                        </div>
                        <div class="d-inline-block ms-3">
                            <div class="stat">
                                <i class="align-middle text-primary" data-lucide="hard-drive"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-xxl-3 d-flex">
            <div class="card flex-fill">
                <div class="card-body py-4">
                    <div class="d-flex align-items-start">
                        <div class="flex-grow-1">
                            <h3 class="mb-2" data-bs-toggle="tooltip" title="@agent.BootTime.ToString("F")">
                                @agent.BootTime.ToString("g")
                            </h3>
                            <p class="mb-2">@Localizer["Last Boot Time"]</p>
                            <div class="mb-0">
                                <span class="text-muted" data-utc-time="@agent.LastUpdate.ToHtmlDateTime()"
                                      data-bs-toggle="tooltip" title="@Localizer["Last Update"]"></span>
                            </div>
                        </div>
                        <div class="d-inline-block ms-3">
                            <div class="stat">
                                <i class="align-middle text-secondary" data-lucide="clock"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 col-xl-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">@Localizer["Agent Information"]</h5>
                </div>
                <div class="card-body">
                    <h5 class="h6 card-title">@Localizer["Hardware Details"]</h5>

                    <ul class="list-unstyled mb-3">
                        <li class="mb-1">
                            <span data-lucide="cpu" class="lucide-sm me-1"></span>
                            @Localizer["Cores"]: <strong>@agent.CpuCores</strong>
                        </li>
                    </ul>

                    <h6 class="h6 card-title" style="font-size: 0.8rem;">
                        @Localizer["RAM"] (@mem.Used.HumanReadableSize() / @agent.RamInGb GB)
                    </h6>
                    <div class="progress progress-sm" data-bs-toggle="tooltip" data-placement="bottom"
                         title="Used: @mem.Used.HumanReadableSize() | Buffer: @mem.Buf.HumanReadableSize() | Cache: @mem.Cache.HumanReadableSize()">
                        <div class="progress-bar-striped bg-success" role="progressbar"
                             style="width: @(mem.UsedRate)%"></div>
                        <div class="progress-bar-striped bg-info" role="progressbar"
                             style="width: @(mem.BufRate)%"></div>
                        <div class="progress-bar-striped bg-warning" role="progressbar"
                             style="width: @(mem.CacheRate)%"></div>
                    </div>
                    <div class="mb-3"></div>
                    <h6 class="h6 card-title" style="font-size: 0.8rem;">
                        @Localizer["Disk Usage"]
                    </h6>
                    @if (agent.Disks.Any())
                    {
                        @foreach (var disk in agent.Disks)
                        {
                            <p class="mb-1 small text-muted">@disk.Name (@disk.Used GB / @disk.Total GB)</p>
                            <div class="progress progress-sm w-100 mb-3">
                                <div class="progress-bar @(disk.Total > 0 && disk.Used / (double)disk.Total > 0.7 ? "bg-danger" : disk.Total > 0 && disk.Used / (double)disk.Total > 0.6 ? "bg-warning" : "bg-success")"
                                     role="progressbar"
                                     style="width: @(disk.Total > 0 ? disk.Used * 100.0 / disk.Total : 0)%"
                                     aria-valuenow="@(disk.Total > 0 ? disk.Used * 100.0 / disk.Total : 0)"
                                     aria-valuemin="0"
                                     aria-valuemax="100"
                                     data-bs-toggle="tooltip"
                                     data-placement="bottom"
                                     title="@disk.Name: @disk.Used GB / @disk.Total GB">
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="mb-1 small text-muted">/ (@agent.UsedRoot GB / @agent.TotalRoot GB)</p>
                        <div class="progress progress-sm w-100">
                            <div class="progress-bar @health.DiskColorClass" role="progressbar"
                                 style="width: @(health.DiskUseRatio * 100)%"
                                 aria-valuenow="@(health.DiskUseRatio * 100)"
                                 aria-valuemin="0"
                                 aria-valuemax="100"
                                 data-bs-toggle="tooltip"
                                 data-placement="bottom"
                                 title="@health.DiskPrompt">
                            </div>
                        </div>
                    }
                </div>
                <hr class="my-0"/>
                <div class="card-body">
                    <h5 class="h6 card-title">@Localizer["Runtime Info"]</h5>
                    <ul class="list-unstyled mb-0">
                        @if (!string.IsNullOrWhiteSpace(agent.Process))
                        {
                            <li class="mb-1"><span data-lucide="activity"
                                                   class="lucide-sm me-1"></span> @Localizer["Mainly used by process"]: @agent.Process
                            </li>
                        }
                        @if (!string.IsNullOrWhiteSpace(agent.KernelVersion))
                        {
                            <li class="mb-1"><span data-lucide="settings"
                                                   class="lucide-sm me-1"></span> @Localizer["Kernel Version"]: @agent.KernelVersion
                            </li>
                        }
                        @if (!string.IsNullOrWhiteSpace(agent.Motd))
                        {
                            <li class="mb-1"><span data-lucide="mail"
                                                   class="lucide-sm me-1"></span> @Localizer["MOTD"]: @agent.Motd</li>
                        }

                        <li class="mb-1"><span data-lucide="info-hex"
                                               class="lucide-sm me-1"></span> @Localizer["Agent Version"]: @agent.Version</li>
                    </ul>
                </div>
                <hr class="my-0"/>
                <div class="card-body">
                    <h5 class="h6 card-title">@Localizer["Identity"]</h5>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-1">
                            <span data-lucide="key" class="lucide-sm me-1"></span> @Localizer["Client ID"]:
                            <small class="text-muted" style="word-break: break-all;">@agent.ClientId</small>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-8 col-xl-9">
            <div class="row">
                <div class="col-12 col-lg-4 d-flex">
                    <div class="card flex-fill w-100">
                        <div class="card-header">
                            <h5 class="card-title mb-0">@Localizer["CPU Usage"]</h5>
                        </div>
                        <div class="card-body">
                            <canvas id="cpuChart"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-4 d-flex">
                    <div class="card flex-fill w-100">
                        <div class="card-header">
                            <h5 class="card-title mb-0">@Localizer["RAM Usage"]</h5>
                        </div>
                        <div class="card-body">
                            <canvas id="ramChart"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-4 d-flex">
                    <div class="card flex-fill w-100">
                        <div class="card-header">
                            <h5 class="card-title mb-0">@Localizer["System Load"]</h5>
                        </div>
                        <div class="card-body">
                            <canvas id="loadChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-lg-6 d-flex">
                    <div class="card flex-fill w-100">
                        <div class="card-header">
                            <h5 class="card-title mb-0">@Localizer["Network I/O"]</h5>
                        </div>
                        <div class="card-body">
                            <canvas id="networkChart"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6 d-flex">
                    <div class="card flex-fill w-100">
                        <div class="card-header">
                            <h5 class="card-title mb-0">@Localizer["Disk I/O"]</h5>
                        </div>
                        <div class="card-body">
                            <canvas id="diskChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (agent.Containers.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">@Localizer["Docker Containers"]</h5>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover table-striped my-0" id="containersTable">
                            <thead>
                                <tr>
                                    <th>@Localizer["Status"]</th>
                                    <th>@Localizer["Name"]</th>
                                    <th>@Localizer["Image"]</th>
                                    <th>@Localizer["CPU %"]</th>
                                    <th>@Localizer["Memory"]</th>
                                    <th>@Localizer["Uptime"]</th>
                                    <th>@Localizer["Ports"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var container in agent.Containers)
                                {
                                    var statusTextClass = "text-muted";
                                    if (container.Status.Contains("(healthy)"))
                                    {
                                        statusTextClass = "text-success";
                                    }
                                    else if (container.Status.Contains("(unhealthy)"))
                                    {
                                        statusTextClass = "text-danger";
                                    }

                                    <tr class="align-middle">
                                        <td data-sort="@(container.IsHealthy ? 1 : 0)">
                                            @if (container.HasHealthCheck)
                                            {
                                                if (container.IsHealthy)
                                                {
                                                    <span class="badge badge-subtle-success">
                                                        <i class="align-middle me-1" data-lucide="check-circle" style="width: 12px; height: 12px;"></i>
                                                        @Localizer["Healthy"]
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-subtle-danger">
                                                        <i class="align-middle me-1" data-lucide="alert-triangle" style="width: 12px; height: 12px;"></i>
                                                        @Localizer["Unhealthy"]
                                                    </span>
                                                }
                                            }
                                            else
                                            {
                                                if (container.IsHealthy)
                                                {
                                                    <span class="badge badge-subtle-info">
                                                        <i class="align-middle me-1" data-lucide="play-circle" style="width: 12px; height: 12px;"></i>
                                                        @Localizer["Running"]
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-subtle-secondary">
                                                        <i class="align-middle me-1" data-lucide="stop-circle" style="width: 12px; height: 12px;"></i>
                                                        @Localizer["Stopped"]
                                                    </span>
                                                }
                                            }
                                            <br/>
                                            <span class="@statusTextClass small">@container.State (@container.Status)</span>
                                        </td>
                                        <td><strong>@container.Name.Split('.')[0]</strong><br /><small class="text-muted">@container.Id.SafeSubstring(12)</small></td>
                                        <td style="max-width: 150px;" class="text-truncate" title="@container.Image">@container.Image</td>
                                        <td data-sort="@container.CpuPercentage">@container.CpuPercentage.ToString("F2")%</td>
                                        <td data-sort="@container.MemoryUsage">
                                            <div class="d-flex flex-column" style="min-width: 100px;">
                                                <span>@container.MemoryUsage.HumanReadableSize()</span>
                                                <div class="progress progress-xs w-100" style="height: 4px;">
                                                    <div class="progress-bar bg-primary" role="progressbar" style="width: @(container.MemoryLimit > 0 ? (container.MemoryUsage * 100.0 / container.MemoryLimit) : 0)%"
                                                         title="@container.MemoryUsage.HumanReadableSize() / @container.MemoryLimit.HumanReadableSize()" data-bs-toggle="tooltip"></div>
                                                </div>
                                            </div>
                                        </td>
                                        <td data-sort="@container.CreatedTime.Ticks">@container.Uptime</td>
                                        <td style="max-width: 150px;" class="text-truncate" title="@container.Ports"><small>@container.Ports</small></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@* ReSharper disable once Razor.SectionNotResolved *@

@section scripts
{
    <script src="~/node_modules/chart.js/dist/chart.umd.js"></script>
    <script src="~/scripts/metrics.js" asp-append-version="true"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            startCpuClient("@Model.Agent.ClientId");
            startRamClient("@Model.Agent.ClientId", @Model.Agent.RamInGb);
            startLoadChart("@Model.Agent.ClientId");
            startNetworkChart("@Model.Agent.ClientId");
            startDiskChart("@Model.Agent.ClientId");

            if ($("#containersTable").length > 0) {
                $('#containersTable').DataTable({
                    "destroy": true,
                    "responsive": true,
                    "paging": true,
                    "pageLength": 10,
                    "searching": true,
                    "info": false,
                    "order": [[1, "asc"]],
                    "drawCallback": function () {
                        $('[data-toggle="tooltip"]').tooltip({
                            trigger: 'hover'
                        });
                    }
                });
            }
        });
    </script>
}
