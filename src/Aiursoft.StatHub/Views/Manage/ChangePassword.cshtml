@model Aiursoft.StatHub.Models.ManageViewModels.ChangePasswordViewModel

@* Standard page title, ensuring consistency across the account management section. *@
<h1 class="h3 mb-3">@Localizer["Change your password"]</h1>

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">@Localizer["Password Settings"]</h5>
    </div>
    <div class="card-body">
        <form asp-controller="Manage" asp-action="ChangePassword" method="post">

            @* The validation summary provides a clear, top-level overview of any errors. *@
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="OldPassword" class="form-label">@Localizer["Current Password"]</label>
                <input asp-for="OldPassword" class="form-control form-control-lg" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label">@Localizer["New Password"]</label>
                <input asp-for="NewPassword" class="form-control form-control-lg" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
                @* Providing password policy guidance is a crucial UX best practice. *@
                <small class="form-text text-muted">@Localizer["Your new password must be at least 6 characters long."]</small>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label">@Localizer["Confirm New Password"]</label>
                <input asp-for="ConfirmPassword" class="form-control form-control-lg" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">@Localizer["Update Password"]</button>
                @* A "Cancel" button is essential for consistent navigation and user control. *@
                <a asp-controller="Manage" asp-action="Index" class="btn btn-light">@Localizer["Cancel"]</a>
            </div>
        </form>
    </div>
</div>
