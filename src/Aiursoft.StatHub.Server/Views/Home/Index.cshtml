@model Aiursoft.StatHub.SDK.Models.Client[]

<div class="jumbotron">
    <div class="container">
        <h1 class="display-4">Welcome, Admin!</h1>
        <p class="lead">Here you can manage your clients and view your clients' status.</p>
    </div>
</div>
<div class="container">
    <div class="row no-gutters">
        <div class="col-md-12 mt-3">
            <div class="card mb-2 tests-card h-100">
                <div class="card-body">
                    <h5 class="card-title">Client status</h5>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-sm" id="logTable">
                            <tr>
                                <th>Hostname</th>
                                <th>IP</th>
                                <th>Up time</th>
                                <th>CPU Usage</th>
                                <th>Last Update</th>
                            </tr>
                            @foreach (var client in Model)
                            {
                                <tr>
                                    <td>@client.Hostname</td>
                                    <td>@client.Ip</td>
                                    <td>@client.UpTime</td>
                                    <td>@client.CpuUsage</td>
                                    <td>@client.LastUpdate</td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
